<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calculadorafx.CalculadoraController" fx:id="container">


    <TextField id="resultContainer" fx:id="resultContainer" editable="false" focusTraversable="false" />

    <VBox fx:id="calculatorContainer" id="calculatorContainer">
        <GridPane fx:id="calculator" hgap="2.0" vgap="2.0">
            <Button text=" + " GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text=" - " GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text=" * " GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="8" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="9" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text=" / " GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="6" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="7" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="C" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="btnCalc" onAction="#deleteLast"/>
            <Button text="4" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="CE" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="btnCalc" onAction="#deleteAll"/>
            <Button text="2" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="3" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="=" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="btnCalc" onAction="#showResult"/>
            <Button text="0" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="1" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="btnCalc" onAction="#addNumber"/>
            <Button text="Hist" GridPane.columnIndex="2" GridPane.rowIndex="5" styleClass="btnCalc" onAction="#history"/>
        </GridPane>
    </VBox>
</VBox>
